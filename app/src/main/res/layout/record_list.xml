<?xml version="1.0" encoding="utf-8" ?>
<com.daimajia.swipe.SwipeLayout
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:id="@+id/red_layout"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="@drawable/radius_red"
        android:gravity="center"
        android:tag="Bottom3"
        android:weightSum="102">

        <ImageView
            android:id="@+id/trash"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/trash" />
<!--
        <TextView
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Delete Item?"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <Button
            android:visibility="invisible"
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:text="Yes,Delete"
            android:textColor="#FF5534" />
            -->
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@drawable/radius_shape"
        >

        <TextView
            android:textColor="@color/white"
            android:textSize="20dp"
            android:visibility="gone"
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/text_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="Hover"
            android:text="Lip Training Record: Word:æ”¹" />

        <TextView
            android:id="@+id/correctly"
            android:textSize="20dp"
            android:layout_below="@+id/text_data"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Correctly: Yes" />
    </RelativeLayout>
</com.daimajia.swipe.SwipeLayout>